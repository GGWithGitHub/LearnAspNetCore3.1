
@{
}

@if (ViewBag.Msg != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <span>@ViewBag.Msg</span>
    </div>
    <br />
}

<h3>Generate error for divide by zero.</h3>
<button class="btn btn-primary"
        onclick="window.location.href = `@Url.Action("GenerateDivideByZeroError","Logging")`">
    Click on me
</button>

<br />

<h3>Generate a custom error</h3>
<button class="btn btn-primary"
        onclick="window.location.href = `@Url.Action("GenerateCustomError","Logging")`">
    Click on me
</button>

