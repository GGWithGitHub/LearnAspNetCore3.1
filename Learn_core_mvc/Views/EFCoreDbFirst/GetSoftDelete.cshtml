@model Learn_core_mvc.ViewModels.SoftDeleteVM

@{
    ViewData["Title"] = "";
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <form asp-action="SoftDelete">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SoftDeleteModel.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SoftDeleteModel.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SoftDeleteModel.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SoftDeleteModel.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SoftDeleteModel.Phone)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SoftDeleteModel.Phone)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SoftDeleteModel.IsDeleted)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SoftDeleteModel.IsDeleted)
            </dd>
        </dl>

        <input type="hidden" asp-for="SoftDeleteModel.Id" />
