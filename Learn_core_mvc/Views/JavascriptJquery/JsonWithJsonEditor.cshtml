@section Styles{ 
    <link href="https://cdnjs.cloudflare.com/ajax/libs/jsoneditor/9.5.6/jsoneditor.min.css" rel="stylesheet" type="text/css">
}

<div class="row">
    <div class="col-md-12">
        <div id="jsoneditor" style="width: 100%; height: 400px;">

        </div>
    </div>
</div>

@section Scripts{ 
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jsoneditor/9.5.6/jsoneditor.min.js"></script>
    <script>
        var jsonData = {
            "users": [
                {
                    "id": 1,
                    "name": "John Doe",
                    "email": "john@example.com",
                    "age": 30,
                    "city": "New York"
                },
                {
                    "id": 2,
                    "name": "Jane Smith",
                    "email": "jane@example.com",
                    "age": 25,
                    "city": "Los Angeles"
                },
                {
                    "id": 3,
                    "name": "Alice Johnson",
                    "email": "alice@example.com",
                    "age": 35,
                    "city": "Chicago"
                }
            ]
        }

        $(document).ready(function () {
            loadJsonInJsonEditor();
        });

        function loadJsonInJsonEditor() {
            $("#jsoneditor").empty();
            var container = document.getElementById("jsoneditor");
            var options = {
                mode: 'view', // Set mode to 'view' to disable editing
                sortObjectKeys: false, // Disable sorting of object keys
                history: false, // Disable history to prevent undo/redo actions
                onEditable: function (node) {
                    // Function that determines if a node is editable; return false to disable editing
                    return false;
                },
                //navigationBar: false, // Disable the navigation bar to prevent structural changes
                statusBar: false, // Disable the status bar at the bottom
            };

            var editor = new JSONEditor(container, options, jsonData);
        }
    </script>
}
