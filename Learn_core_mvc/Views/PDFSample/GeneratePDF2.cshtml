<div class="row">
    <div class="col-md-12">
        <div>
            <h3>This is main view content.</h3>
            <img src="~/images/Panda.jpg" width="100" height="100" />
        </div>
        <div id="dvPVContent" class="mt-3">
            <partial name="_ContentForPDFPV" />
        </div>
    </div>
</div>
<br />
<button class="btn btn-primary" onclick="GeneratePdfOnClick()">Generate Pdf of this view</button>

@section Scripts{
    <script>
        function GeneratePdfOnClick() {
            var mainTagHtml = $("main").html();
            var dataToSend = { Html: mainTagHtml };

            $.ajax({
                url: "@Url.Action("StoreHtmlInSession", "PDFSample")",
                data: dataToSend,
                type: "POST",
                //contentType: "application/json; charset=utf-8",
                success: function (result) {
                    window.location.href = "@Url.Action("PdfFromHtml", "PDFSample")";
                },
                error: function (xhr) {
                    alert("error");
                }
            });
        }
    </script>
}
